{
    "targets": [
        {
            "target_name": "<(module_name)",
            "cflags_cc!": ["-fno-exceptions"],
            "cflags_cc+": ["-Wno-unused-variable"],
            "cflags+": ["-Wno-unused-function"],
            'conditions': [
                ['OS=="mac"', {
                    'xcode_settings': {
                        'GCC_ENABLE_CPP_EXCEPTIONS': 'YES'
                    }
                }]
            ],
            "sources": [
                "./src/po_addon_interface.cpp",
                "./vendors/libinjection/src/libinjection_xss.c",
                "./vendors/libinjection/src/libinjection_sqli.c",
                "./vendors/libinjection/src/libinjection_html5.c",
                "./vendors/openrasp/openrasp-v8/base/flex/flex.cc"
            ],
            "include_dirs": [
                "<!@(node -p \"require('node-addon-api').include\")",
                "./vendors/libinjection/src/",
                "./vendors/openrasp/openrasp-v8/base/flex/"
            ],
            'defines': ['NAPI_DISABLE_CPP_EXCEPTIONS'],
        },
        {
            "target_name": "action_after_build",
            "type": "none",
            "dependencies": ["<(module_name)"],
            "copies": [
                {
                    "files": ["<(PRODUCT_DIR)/<(module_name).node"],
                    "destination": "<(module_path)"
                }
            ]
        }
    ]
}
